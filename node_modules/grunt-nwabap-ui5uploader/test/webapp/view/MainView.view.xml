          xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <App>
        <pages>
            <Page title="{i18n>title}">
                <content>
                    <VBox>
                        <Button text="{i18n>btnTxt}" press="onPress"></Button>
