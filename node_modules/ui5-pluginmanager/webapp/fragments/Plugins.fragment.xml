<core:FragmentDefinition
	xmlns="sap.m"
  xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form"
  xmlns:dnd="sap.ui.core.dnd">

	<Dialog
    draggable="true"
    resizable="true"
    contentWidth="35rem"
    title="{i18n>PluginManager.description}"> 
    <content>
      <Tree
        items="{plugins>/}"
        mode="MultiSelect"
        includeItemInSelection="true"
        select="togglePlugin">
        <CustomTreeItem 
          selected="{path:'plugins>enabled' }">
          <!-- Explicitly use the full formatter name, so that the "this" context will be the control's reference -->
          <Text text="{path:'plugins>', formatter:'be.fiddle.pluginManager.util.Formatter.getObjectName'}" width="8rem"/>
          <ObjectIdentifier title="{plugins>url}" text="{plugins>component}" />
        </CustomTreeItem>
      </Tree>
    </content>       

    <endButton>
      <Button text="{i18n>PluginManager.action.close}" icon="sap-icon://reject" press="closeManager" />
		</endButton>                        
	</Dialog>
</core:FragmentDefinition>
