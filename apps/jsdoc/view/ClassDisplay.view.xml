<mvc:View	controllerName="be.fiddle.jsdoco.controller.ClassDetail" 
			xmlns:html="http://www.w3.org/1999/xhtml" 
			xmlns:uxap="sap.uxap"
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns="sap.m"
			height="100%"
			displayBlock="true" >
    <Page   title="{classes>alias}" 
            showHeader="true"
			showNavButton="{appSettings>/isPhone}"
			navButtonPress="onOpenMasterFromDetail"
			class="MasterButton">
        <uxap:ObjectPageLayout  id="Detail" 
                                enableLazyLoading="true" 
                                useIconTabBar="true"
                                showHeader="false">
            <uxap:headerContent>
                <Label text="{i18n>be.fiddle.jsdoco.class.memberof}" labelFor="linkMemberof"/>    
                <Link text="{classes>memberof}" href="#/{classes>memberof}" id="memberOf" />
            </uxap:headerContent>

            <uxap:sections>
                <uxap:ObjectPageSection id="tabDescription" title="{i18n>be.fiddle.jsdoco.class.description}">
                    <uxap:ObjectPageSubSection>
                        <FormattedText htmlText="{classes>classdesc}" />							
                    </uxap:ObjectPageSubSection>
                </uxap:ObjectPageSection>

                <uxap:ObjectPageSection id="tabProperties" title="{i18n>be.fiddle.jsdoco.class.properties}">
                    <uxap:ObjectPageSubSection>
                        <VBox items="{classes>properties}">
                            <Panel expandable="true" expanded="false" width="100%" class="sapUiNoMargin" headerText="{classes>name}">
                                <content>
                                    <FormattedText htmlText="{classes>description}" />
                                </content>
                            </Panel>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:ObjectPageSection>

                <uxap:ObjectPageSection id="tabEvents" title="{i18n>be.fiddle.jsdoco.class.events}">
                    <uxap:ObjectPageSubSection>
                        <VBox items="{classes>events}">
                            <Panel expandable="true" expanded="false" width="100%" class="sapUiNoMargin" headerText="{classes>name}">
                                <content>
                                    <FormattedText htmlText="{classes>description}" />
                                </content>
                            </Panel>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:ObjectPageSection>

                <uxap:ObjectPageSection id="tabMethods" title="{i18n>be.fiddle.jsdoco.class.methods}">
                    <uxap:ObjectPageSubSection>
                        <VBox items="{classes>methods}">
                            <Panel  expandable="true" 
                                    expanded="false" 
                                    width="100%" 
                                    class="sapUiNoMargin" 
                                    headerText="{parts:['classes>name','classes>params','classes>returns'], formatter:'.getMethodSignature'}">
                                <content>
                                    <FormattedText htmlText="{classes>description}" />
                                    
                                    <Table items="{classes>params}">
                                        <columns>
                                            <Column width="7rem">
                                                <Text text="Name"/>
                                            </Column>
                                            <Column width="9rem">
                                                <Text text="Type"/>
                                            </Column>
                                            <Column>
                                                <Text text="Description" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                    <Label text="{classes>name}" />
                                                    <Text text="{path:'classes>type/names', formatter:'.getParamtype'}" />
                                                    <FormattedText htmlText="{classes>description}" />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </content>
                            </Panel>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:ObjectPageSection>

            </uxap:sections>
        </uxap:ObjectPageLayout>
    </Page>
</mvc:View>